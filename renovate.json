{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommitsDisabled"
    ],
    "automerge": true,
    "labels": [
        "Renovate"
    ],
    "rebaseWhen": "conflicted",
    "schedule": [
        "on the first day of the month"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "datasourceTemplate": "maven",
            "managerFilePatterns": [
                "/^settings\\.gradle\\.kts$/"
            ],
            "matchStrings": [
                "val labyGradlePluginVersion = \"(?<currentValue>.*?)\""
            ],
            "matchStringsStrategy": "combination",
            "registryUrlTemplate": "https://dist.labymod.net/api/v1/maven/release",
            "depNameTemplate": "laby-gradle",
            "packageNameTemplate": "net.labymod.gradle:core"
        }
    ]
}
