.char-info-container {
  width: 100%;
  height: 100%;
  orientation: vertical;
  space-between-entries: 6;
}

.char-info-header {
  width: 100%;
  height: 24;
  padding: 1;
  border: 0 0 0 1 #2c2c2c;
  orientation: horizontal;
  space-between-entries: 3;

  .checkbox {
    width: 16;
    height: width;
    clickable: true;
    margin-right: 2;
  }

  .title {
    left: 25;
    top: 50%;
    alignment-y: center;
    font-weight: 700;
  }
}

.char-info-header-separator {
  width: 100%;
  height: 1;
  background-color: #2c2c2c;
  margin-bottom: 4;
}

.char-info-scroll {
  width: 100%;
  height: 100%;

  Scrollbar {
    left: 0;
    top: 0;
    width: 5;
    height: 100%;
    margin-left: 5;
  }
}

.overview-button-menu {
  left: 50%;
  alignment-x: center;
  height: 20;
  layout: fill;
  space-between-entries: 8;
  width: 90%;
  margin-bottom: 6;
}

.char-info-widget-list {
  width: 100%;
  overwrite-width: true;
  squeeze-height: false;
  space-between-entries: 4;
}
